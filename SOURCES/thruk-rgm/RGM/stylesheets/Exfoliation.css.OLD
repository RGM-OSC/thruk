.servicePENDING  { background-color: #acacac; }
.serviceOK       { color: #fff; background-color: #00CC33; }
.serviceUNKNOWN  { color: #fff; background-color: #CC77C6; }
.serviceWARNING  { background-color: #FFFF00; }
.serviceCRITICAL { color: #fff; background-color: #ff3300; }

.hostUP          { color: #fff; background-color: #00CC33; }
.hostDOWN        { color: #fff; background-color: #ff3300; }
.hostUNREACHABLE { color: #fff; background-color: #ff3300; }
.hostPENDING     { background-color: #acacac; }

/* mouse over classes for inline command selection in status page */
.tableRowHover {
  line-height: 150%;
  border:1px none;
}

.tableRowSelected {
  line-height: 150%;
  border:1px none;
}

/* show log filter */
body.showlog .filter { background-color: white; }
body.showlog .filterTitle { background-color: white; }
body.showlog .filterValue { background-color: white; }
body.showlog .filterName { background-color: white; }

td.filter { background-color: white; }

.filter_button_mini {
  position:relative;
  top: -1px;
  left: -8px;
}

.ui-button span.ui-button-text {
  white-space: nowrap;
  line-height: 1.1;
  font-size: 0.85em;
}

table.cmd_pane { background: none; }
table.cmd_pane tbody > tr > td { background: #f0f1ee; border: none; }
table.cmd_pane th,table.cmd_pane a,table.cmd_pane a:hover { background: #f0f1ee; color: #333333; }

div.pnpSelector { display: inline; position: absolute; right: 2px; top: -6px; }

td.dataVal.eventHandler {
  width: auto;
}

DIV.loginmask table.infoBox {
  width: inherit;
  border: 1px solid #BBBBBB;
}